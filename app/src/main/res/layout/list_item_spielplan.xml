<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/spielplan_list_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_teams"
                android:layout_width="197.5dp"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/team1"
                        android:layout_width="197.5dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Mannschaft 1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="#FF0000"
                        android:text="vs"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/team2"
                        android:layout_width="197.5dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="Mannschaft 2"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_ergebnis"
                android:layout_width="197.5dp"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ergebnis_team1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Ergebnis Team 1"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/vs"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="#FF0000"
                        android:text="-"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ergebnis_team2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Ergebnis Team 2"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>